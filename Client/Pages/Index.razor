@page "/"
@using Client.Models
@using System.Net.Http.Json
@inject HttpClient Http

<h1>My Personal Book collection</h1>

@if (books == null)
{
    <p>Loading...</p>
}
else if (!books.Any())
{
    <p>No books found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Read Status</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@book.ReadStatus</td>
                    <td>@book.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Book> books;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            books = await Http.GetFromJsonAsync<List<Book>>("https://lemon-pebble-088965b1e.1.azurestaticapps.net/data-api/api/Books");
        }
        catch
        {
            books = new List<Book>();
        }
    }
}
